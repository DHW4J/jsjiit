{
    "source": {
        "include": [
            "src",
            "package.json",
            "README.md"
        ],
        "exclude": [
            "node_modules"
        ],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "opts": {
        "destination": "./docs",
        "recurse": true
    },
    "tags": {
        "allowUnknownTags": true
    },
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true
    }
}